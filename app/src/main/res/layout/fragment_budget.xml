<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/berapaBudgetKamuTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="@string/berapa_budget_kamu"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@id/minEditText"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/minEditText"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingVertical="4dp"
        android:hint="@string/min"
        android:textSize="18sp"
        android:background="@drawable/bg_edit_text_stroke_biru"
        android:inputType="number"
        android:importantForAutofill="no"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/maxEditText" />
    <EditText
        android:id="@+id/maxEditText"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingVertical="4dp"
        android:hint="@string/max"
        android:textSize="18sp"
        android:background="@drawable/bg_edit_text_stroke_biru"
        android:inputType="number"
        android:importantForAutofill="no"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/minEditText"
        app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>