<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_item_laptop_favorite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- ImageView Penampil Foto Laptop -->
    <ImageView
        android:id="@+id/laptopFavoriteImageView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <!-- TextView Penampil Nama Laptop -->
    <TextView
        android:id="@+id/laptopFavoriteTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Nama Laptop Favorit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/laptopFavoriteImageView"
        app:layout_constraintRight_toLeftOf="@id/itemLaptopFavoriteBandingkanImageView"/>

    <!-- ImageView Penampil Icon Bandingkan -->
    <ImageView
        android:id="@+id/itemLaptopFavoriteBandingkanImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_bandingkan_biru"
        android:contentDescription="@string/bandingkan_laptop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/laptopFavoriteTextView"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>