<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp"
    android:paddingHorizontal="8dp"
    android:paddingVertical="16dp"
    android:background="@drawable/bg_item_kolom_laptop"
    android:elevation="4dp">

    <!-- ImageView untuk menampilkan foto laptop di rilis terbaru -->
    <ImageView
        android:id="@+id/img_item_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!-- TextView Nama Laptop -->
    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Nama Laptop"/>
    <!-- TextView Harga Laptop -->
    <TextView
        android:id="@+id/tv_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#330099"
        android:textStyle="bold"
        tools:text="Dua Juta Rupiah" />
</LinearLayout>